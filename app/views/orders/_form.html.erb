<div class="row align-center">
  <%= simple_form_for(@order) do |f| %>

    <%= f.error_notification %>

    <div class="checkout-panel">
      <div class="panel-body">
        <h2 class="title">Checkout</h2>
    
        <div class="progress-bar">
          <div class="step active"></div>
          <div class="step"></div>
          <div class="step"></div>
        </div>
    
        <div class="input-fields">
          <div class="column">
            <label for="cardholder">Cardholder's Name</label>
            <input type="text" id="cardholder" class="check-input" />
    
            <div class="small-inputs">
              <div>
                <label for="date">Valid thru</label>
                <input type="text" id="date" class="check-input"/>
              </div>
    
              <div>
                <label for="verification">CVV / CVC *</label>
                <input type="password" id="verification" class="check-input"/>
              </div>
            </div>
    
          </div>
          <div class="column">
            <label for="cardnumber">Card Number</label>
            <input type="password" id="cardnumber" class="check-input"/>
    
            <span class="info">* CVV or CVC is the card security code, unique three digits number on the back of your card separate from its number.</span>
          </div>
        </div>
      </div>
    
      <div class="panel-footer">
        <button class="btn back-btn">Back</button>
        <button class="btn next-btn">Next Step</button>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'secondary button radius expanded' %>
    </div>
  <% end %>
</div>