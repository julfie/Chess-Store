<div class="row align-center">
    <div class="small-2 columns">
      <br>
      <% if can? :create, model_name.capitalize, @user %>
        <!-- Add a button for new instances of object -->
        <%= link_to(eval("new_#{model_name}_path"), class: "button radius new") do %>
          <!-- <i class="fa fa-plus"></i> -->
          &nbsp;Add a New <%= model_name.capitalize %>
        <% end %>
      <% end %>
      
      <% unless sidebar1.blank? %>
        <!-- render the sidebar, if it exists -->
        <%= render partial: "#{sidebar1}" %>
      <% end %>
    </div>

  <div class="small-8 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    <% unless secondary.nil? %>
      <p>&nbsp;</p>
      <%= render partial: "#{secondary}" %>
    <% end %>
  </div>

  <div class="small-2 columns">
      <% unless sidebar.blank? %>
        <!-- render the sidebar, if it exists -->
        <%= render partial: "#{sidebar}" %>
      <% end %>
  </div>
</div>