<div class="off-canvas position-right cart-slide" id="cart" data-off-canvas>
    <!-- Close button -->
    <button class="close-button" aria-label="Close menu" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>

    <!-- Menu -->
    <ul class="vertical menu c-items">
      <% @cart.each do |oi| %>
        <li>
          <br>
          <%= link_to  oi.item.name, item_path(oi.item) %>
          <%= oi.item.current_price %>
          <%= link_to (image_tag "remove-item.svg"), remove_from_cart_path(oi.item.id), remote: true, method: 'get' %>
        </li>
      <% end %>
    </ul>
</div>
