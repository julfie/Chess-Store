
<nav class="top-bar" data-topbar>
  <section class="top-bar-section">
    <div class="float-right"> 

      <!-- link to login -->
      <% if !logged_in? %>
          <%= link_to "Login", login_path, class: 'login' %> 
      <% end %>

      <!-- options for logged in user -->
      <% if logged_in? %>
        <ul class="dropdown menu" data-dropdown-menu>
          <li> 
            <%= link_to "Welcome, #{current_user.first_name}", user_path(current_user), class: 'login' %>
            <ul class="menu">
              <li><%= link_to "Edit settings", edit_user_path(current_user), class: 'drop login' %></li>
              <li><%= link_to "Logout", logout_path, class: 'drop login' %></li>
            </ul>
          </li>
        </ul>
      <% end %>

    </div>
  </section>
</nav>
