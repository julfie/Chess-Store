<div class="contain-to-grid">

  <nav class="top-bar" data-topbar>
    <section class="top-bar-section">
      <div class="float-right"> 

        <!-- link to login -->
        <% if !logged_in? %>
            <%= link_to "Login", login_path, class: 'login' %> 
        <% end %>

        <!-- options for logged in user -->
        <% if logged_in? %>
          <ul class="dropdown menu" data-dropdown-menu>
            <li> 
              <%= link_to "Welcome, #{current_user.first_name}", user_path(current_user), class: 'login' %>
              <ul class="menu">
                <li><%= link_to "Edit settings", edit_user_path(current_user), class: 'login' %></li>
                <li><%= link_to "Logout", logout_path, class: 'login' %></li>
              </ul>
            </li>
          </ul>
        <% end %>

      </div>
    </section>
  </nav>
  
  <nav class="top-bar" data-topbar role="navigation"> 
      <div class="top-bar-title" id='logo'>
        <span data-responsive-toggle="responsive-menu" data-hide-for="medium">
          <button class="menu-icon dark" type="button" data-toggle></button>
        </span>
        <%= link_to image_tag('logo.png'), home_path %>
      </div>
      <div id="responsive-menu">
        <div class="top-bar-right">
          <ul class="dropdown menu" data-dropdown-menu>
            <!-- link to home -->
            <li><%= link_to "Home", home_path %></li>

            <!-- options for items -->
            <li>
              <%= link_to "Items", items_path %>
              <ul class="menu vertical">
                <li><%= link_to "Item List", items_path %></li>
                <li><%= link_to "Reorder List", home_path %></li>
                <li><%= link_to "Add an Item", new_item_path %></li>
              </ul>
            </li>

            <!-- options for purchases -->
            <li>
              <%= link_to "Purchases", purchases_path %>
            </li>

            <!-- options for prices -->
            <li>
              <%= link_to "Prices", item_prices_path %>
            </li>
          </ul>
        </div>
      </div>
      </br>

  </nav>
</div>