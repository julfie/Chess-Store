
<div class="hero-section2">
  <div class="hero-section-text">
    <h1>Welcome to the Chess Warehouse</h1>
  </div>
</div>

<br />

<div class="row align-center">

	<% unless @recents.nil? %>
		<div class="small-4 columns">
			<h2>Your Recent Buys</h2>
			<div class="row large-up-4 small-up-2">
			<% @recents.each do |item| %>
				<div class="card item dash" data-equalizer-watch>
					<% if item.photo_url.nil? %>
						<%= image_tag 'img_not_available.png', class: 'item_show_img' %>
					<% else %>
						<%= image_tag item.photo_url, class: 'item_show_img' %>
					<% end %>
					<div class="card-divider">
						<h5 id="item-card-name"><%= link_to item.name, item_path(item) %></h5>
					</div>
				</div>
			<% end %>
			</div>
		</div>
	<% end %>

	<div class="columns">
		<h2>Featured Items</h2>
		<% @featured.each do |item| %>
			<div class="card item" data-equalizer-watch>
				<% if item.photo_url.nil? %>
					<%= image_tag 'img_not_available.png', class: 'item_show_img' %>
				<% else %>
					<%= image_tag item.photo_url, class: 'item_show_img' %>
				<% end %>
				<div class="card-divider">
					<h5 id="item-card-name"><%= link_to item.name, item_path(item) %></h5>
				</div>
			</div>
		<% end %>
	</div>
</div>