<% unless @current_orders.empty? %>

<div class="linebreak">
  <br>
</div>

  <table>
  <thead>
    <tr>
    <th colspan="3">In Progress Orders</th>
    </tr>
  </thead>

  <tbody>
    <% @current_orders.each do |order| %>
      <tr>
        <td><%= link_to 'view', order %></td>
        <td><%= order.date %></td>
        <td><%= order.grand_total.round(2) %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
<% end %>
<br>