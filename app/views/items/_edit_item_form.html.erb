<div id="item_form" >
  <%= simple_form_for @item, html: { class: 'form-horizontal', multipart: true }, remote: true do |f| %>
    <fieldset>
      <legend><%= controller.action_name.capitalize %> Item</legend>

      <%= f.input :name, input_html: {class: "avg"}, label: false %>
      <div class="field">
        <%= f.label :photo %><br />
        <%= f.file_field :photo %>
      </div>
      <%= f.input :description, input_html: { :rows => 4, class: "avg"}, label: false %>
      <%= f.input :category, collection: Item::CATEGORIES, include_blank: true, input_html: {class: "avg"}, label: false %>
      <%= f.input :color, input_html: {class: "avg"}, label: false %>
      <%= f.input :weight, input_html: {class: "avg"}, label: false %>
      <%= f.input :reorder_level, input_html: {class: "avg"}, label: false %>
      <%= f.input :active %>


      <div class="form-actions">
        <%= f.submit nil, :class => 'button radius' %>
        <%= link_to 'Cancel', items_path, :class => 'button alert radius' %>
      </div>
    </fieldset>
  <% end %>
</div>