<% unless items.nil? || items.empty? %>
  <h5 id="item-type"><%= item_type.capitalize %></h5>
  <div data-equalizer>
    <% items.each do |item| %>
      <div class="card item" data-equalizer-watch>
          <% if item.photo_url.nil? %>
            <%= image_tag 'img_not_available.png', class: 'item_show_img' %>
          <% else %>
            <%= image_tag item.photo_url, class: 'item_show_img' %>
          <% end %>
        <div class="card-divider">
          <h5 id="item-card-name"><%= link_to item.name, item_path(item) %></h5>
          <p><%= number_to_currency item.current_price %></p>
          <% if can? :manage, Item, @user %>
            <% num = item.inventory_level / item.reorder_level %>
            <progress class="secondary" max="100" value="<%= num*10 %>"></progress>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>