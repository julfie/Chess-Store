<% @order_items.each do |oi| %>
<tr class="centered" >
    <td width="75"></td>
    <td width="250"><%= oi.item.name %></td>
    <td width="25"><%= oi.quantity %></td>
    <td width="100">
        <% if OrderItem.shipped.include? oi %>
            <div id='shipped'>shipped</div>
        <% else %>
            <div id='unshipped'>unshipped</div>
        <% end %>
    </td>
    <td width="200">
        <% unless OrderItem.shipped.include? oi %>
            <button onclick=oi.shipped type="button" class="button success"> <i class="fa fa-truck"  aria-hidden="true"></i> &nbsp;SHIP </button>
        <% else %>
            <button type="button" class="button alert"> UNDO </button>
        <% end %>
    </td>
</tr>
<% end %>