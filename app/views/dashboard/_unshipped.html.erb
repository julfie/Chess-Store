  <h5>Unshipped Orders</h5>
  
    <table class="table">
      <thead>
        <tr>
          <th width="50">View</th>
          <th width="125" colspan="2">School</th>
          <th width="125" colspan="4">Address</th>
        </tr>
      </thead>
    <tbody>
    <% @unshipped_orders.each do |order| %>
      <tr>
        <td><%= link_to 'view', order_path(order) %></td>
        <td><%= order.school.name %></td>
        <td colspan="4">
          <%= order.school.street_1 %>,
          <%= order.school.street_2 %> 
          <%= order.school.city %> 
          <%= order.school.state %>,
          <%= order.school.zip %>
        </td>
      </tr>
      <tr>      
        <% if order.id == @unshipped_orders.first.id %>
          <%= render :partial =>  "order_items" %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>